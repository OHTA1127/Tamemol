<div class="container">
  <h1>今月のリスト</h1>
  <h3>我慢中</h3>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>商品名</th>
        <th>金額</th>
        <th>カテゴリー</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts_unbuy.each do |post| %>
        <tr>
          <th>
            <%= link_to post_path(post.id) do %>
              <%= post.product %>
            <% end %>
          </th>
          <th>
            <%= post.price %>
          </th>
          <th>
            <%= post.category %>
          </th>
          <th>
            <% if post.purchase_status == false %>
              <%= link_to "買った", post_path(post), class: "btn btn-primary", method: :put %>
            <% end %>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h3>買ったもの</h3>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>商品名</th>
        <th>金額</th>
        <th>カテゴリー</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts_buy.each do |post| %>
        <tr>
          <th>
            <%= link_to post_path(post.id) do %>
              <%= post.product %>
            <% end %>
          </th>
          <th>
            <%= post.price %>
          </th>
          <th>
            <%= post.category %>
          </th>
          <th></th>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "記録する", new_post_path %>
  <%= link_to "My pageへ", user_path(current_user) %>
</div>
